<%- include('../header'); -%>

    <main role="main" class="flex-shrink-0">
        <div class="container">
            <h1 class="mt-5">Adicionar novo livro</h1>
            <form>
                <div class="form-group">
                    <label>
                        Titulo
                    </label>
                    <input type="text" class="form-control" placeholder="Insira o titulo do livro">
                </div>
                
                <div class="form-group">
                    <label>
                        Autor
                    </label>
                    <input type="text" class="form-control" placeholder="Insira o nome do autor do livro">
                </div>
                <div class="form-group">
                    <label>
                        Editora
                    </label>
                    <input type="text" class="form-control" placeholder="Insira o nome da editora do livro">
                </div>
                <div class="form-group">
                    <label>
                        Quantidade
                    </label>
                    <input type="number" class="form-control" placeholder="Insira a quantidade de copias do livro">
                </div>
                <div class="form-group">
                    <label>Categoria</label>
                    <select class="form-control">
                        <option>Matemática</option>
                        <option>Física</option>
                        <option>Química</option>
                        <option>Biologia</option>
                        <option>Sociologia</option>
                        <option>Filosofia</option>
                        <option>História</option>
                        <option>Geografia</option>
                        <option>Português</option>
                        <option>Literatura</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </main>

    <%- include('../footer'); -%>